<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="doze_animation"
        android:layout="@layout/doze_animation" /> 

    <PreferenceCategory
        android:title="When to Show"/>
		
        <SwitchPreference
            android:key="always_on_ambient"
            android:defaultValue="false"
            android:title="@string/aod_setting_title"
            android:summary="@string/aod_setting_summary" />

        <com.msm.xtended.preferences.SystemSettingSwitchPreference
            android:key="doze_on_charge"
            android:defaultValue="false"
            android:title="@string/doze_on_charge_title"
            android:summary="@string/doze_on_charge_summary" />

        <SwitchPreference
            android:key="ambient_display"
            android:defaultValue="true"
            android:title="@string/ambient_display_notifications"
            android:summary="@string/ambient_display_summary" />

    <PreferenceCategory
        android:key="tilt_sensor"
        android:title="@string/tilt_sensor_title" >

        <SwitchPreference
            android:key="pick_up"
            android:defaultValue="false"
            android:title="@string/pick_up_title"
            android:summary="@string/pick_up_summary" />

        <SwitchPreference
            android:key="gesture_raise_to_wake"
            android:defaultValue="false"
            android:title="@string/wake_gesture_title"
            android:summary="@string/wake_gesture_summary"
            android:dependency="pick_up" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="smart_wake_category"
        android:title="@string/smart_wake_category_title" >

        <SwitchPreference
            android:key="smart_wake"
            android:defaultValue="false"
            android:title="@string/smart_wake_title"
            android:summary="@string/smart_wake_summary"
            android:dependency="pick_up" />

    </PreferenceCategory>
    
    <Preference
        android:key="doze_brightness"
        android:title="@string/doze_brightness_title"
        android:summary="@string/doze_brightness_summary">
    <intent
        android:action="android.settings.APPLICATION_DETAILS_SETTINGS"
        android:targetPackage="com.custom.ambient.display"
        android:targetClass="com.custom.ambient.display.DozeBrightness" />
    </Preference>
</PreferenceScreen>


